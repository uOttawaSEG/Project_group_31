<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F5F5F5"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student: Chimdi Okudo"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvSessionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 2025-02-01 10:00"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tvSessionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: APPROVED"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/btnCancelSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Session"
        android:layout_marginTop="8dp"/>
</LinearLayout>
