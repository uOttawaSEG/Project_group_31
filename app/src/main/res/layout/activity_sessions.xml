<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Sessions"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvUpcomingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Sessions"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUpcomingSessions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPastHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past Sessions"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPastSessions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnReturnToDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Dashboard"
        android:layout_marginTop="8dp"
        android:backgroundTint="#D32F2F"
        android:textColor="@android:color/white"
        android:textAllCaps="false" />
</LinearLayout>
