<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".student.StudentDashboardActivity">

    <TextView
        android:id="@+id/tvWelcomeStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Student!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnBrowseSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse &amp; Book Sessions"
        android:textAllCaps="false"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnMyBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Bookings (Upcoming)"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnPastSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past Sessions &amp; Ratings"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF5252"
        android:padding="12dp" />

</LinearLayout>