<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    tools:context=".tutor.ManageSlotsActivity">
    <!--Title of the page so tutor can know what screen he is-->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your available slots!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!--Allow tutor to set up auto-approve or manually approve the request-->
    <TextView
        android:id="@+id/tvApprovalMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Approval Mode:"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="6dp" />

    <Switch
        android:id="@+id/switchAutoApproval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic Approval"
        android:checked="false"
        android:layout_marginBottom="16dp" />

    <!--add slots button-->
    <Button
        android:id="@+id/btnAddSlot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Slot"
        android:layout_marginBottom="12dp"
        android:textAllCaps="false" />

    <!--tutor can view his current slots-->
    <TextView
        android:id="@+id/tvViewYourSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Current Slots Are:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvViewSlotsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_slot" />

    <!--he can return to the dashboard to see his updated schedule-->
    <Button
        android:id="@+id/btnReturnToDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Dashboard"
        android:layout_marginTop="12dp"
        android:backgroundTint="#757575"
        android:textColor="@android:color/white"
        android:textAllCaps="false" />
</LinearLayout>
